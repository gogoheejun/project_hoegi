<?xml version="1.0" encoding="utf-8"?>



<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatlist_ivProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/signupactivity_iv_profile1"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/chatlist_tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동(한국외국어대학교)"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="#FF555555"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/chatlist_ivProfile"/>

        <TextView
            android:id="@+id/chatlist_tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요 연락드립니다!"
            android:textSize="14sp"
            android:layout_below="@id/chatlist_tvNickname"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/chatlist_tvNickname"/>
        <TextView
            android:id="@+id/chatlist_tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 1:00"
            android:textSize="12sp"
            android:layout_alignTop="@id/chatlist_tvNickname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>