<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/bts_time_layout"
  >

    <RadioGroup
        android:id="@+id/bts_time_rg"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/bts_time_rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8시간"/>
        <RadioButton
            android:id="@+id/bts_time_rb2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="24시간"/>
        <RadioButton
            android:id="@+id/bts_time_rb3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3일"/>
        <RadioButton
            android:id="@+id/bottomsheet_rb4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7일"/>

    </RadioGroup>

</LinearLayout>