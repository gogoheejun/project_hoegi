<?xml version="1.0" encoding="utf-8"?>



<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tab1_recycler_item_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/loginactivity_logo"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/tab1_recycler_item_nameschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동(한국외국어대학교)"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tab1_recycler_item_iv"/>

        <TextView
            android:id="@+id/tab1_recycler_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 모집합니다"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/tab1_recycler_item_nameschool"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/tab1_recycler_item_nameschool"/>
        <TextView
            android:id="@+id/tab1_recycler_item_lefttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3시간 후 삭제"
            android:textSize="12sp"
            android:layout_alignTop="@id/tab1_recycler_item_nameschool"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>