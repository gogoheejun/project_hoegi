<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tab1_list_dialog_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박명수"/>
        <TextView
            android:id="@+id/tab1_list_dialog_tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(한국외국어대학교)"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tab1_list_dialog_tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동 용병모집"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tab1_list_dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내일 운동하실 분 구해요"
        android:textSize="24sp"
        android:layout_marginTop="12sp"/>
    <TextView
        android:id="@+id/tab1_list_dialog_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="내일 1시 학교 운동장에서 할거에요. 포지션 상관없이 한명 구해요. 끝나고 고기도 먹어요! 연락주세요"
        android:textSize="16sp"/>

</LinearLayout>