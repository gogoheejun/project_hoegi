<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/loginactivity_logo"
        android:layout_above="@id/activitylogin_et_email"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"/>
    
    <EditText
        android:id="@+id/activitylogin_et_email"
        android:hint="  이메일"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:maxLines="1"
        android:background="@drawable/loginactivity_et_box"
        android:layout_marginBottom="4dp"/>
    <EditText
        android:id="@+id/activitylogin_et_pw"
        android:hint="  비밀번호"
        android:layout_width="300dp"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:background="@drawable/loginactivity_et_box"
        android:layout_below="@id/activitylogin_et_email"
        android:layout_alignLeft="@id/activitylogin_et_email"
        android:maxLength="20"

        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/activitylogin_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activitylogin_et_pw"
        android:layout_centerInParent="true"
        android:text="로그인"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_signup"
        android:layout_below="@id/activitylogin_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:onClick="activitylogin_onclick_signup"/>


</RelativeLayout>